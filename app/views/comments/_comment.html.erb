<div class="comment">
<% @post.comments.each do |comment| %>
<tr>
  <td><b>Name:</b>   <%= comment.author %></td><br />
  <td><b>Comment:</b>   <%= comment.content %></td>
</tr>
<% end %>


<% if current_user && current_user.editor? %>
  <tr>
    <% if comment.approved? %>
      <td><%= button_to 'Delete', post_comment_path(@post, comment), method: :delete, class: "btn" %></td>
    <% else %>
      <td><%= button_to 'Approve', post_comment_path(@post, comment, comment: { approved: true }), method: :put, class: "btn" %></td>
    <% end %>
  </tr>
<% end %>
</div>
