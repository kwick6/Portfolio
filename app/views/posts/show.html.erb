<div class="comment">
<p>

  <h3><%= @post.title %></h3>
</p>
<p><b>10/23/13</b>
</p>

<p>
  <%= @post.content %>
</p>
<br />
<% if current_user && current_user.editor? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  <% else %>
<% end %>
<br />
<br />
<ul>
  <% if @post.comments.any? %>
    <% @post.comments.each do |comment| %>

      <% if current_user.nil? %>
        <% if comment.approved %>
          <%= render comment %>
        <% end %>

      <% elsif current_user.editor? %>
        <%= render comment %>

      <% else %>
        <% if comment.approved %>
          <%= render comment %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</ul>


<% if current_user %>
  <h4> Add a Comment </h4>
  <%= render '/comments/form' %>
<% end %>
</div>
